{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "sourceRoot": "/src/",
        "outDir" : "dist"
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}